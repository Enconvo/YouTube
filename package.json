{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "youtube",
  "version": "0.0.71",
  "description": "Youtube tools",
  "title": "Youtube",
  "icon": "icon.png",
  "author": "Enconvo",
  "license": "MIT",
  "type": "module",
  "minAppVersion": "1.8.8",
  "categories": [
    "Productivity"
  ],
  "commands": [
    {
      "name": "youtube_transcript_loader",
      "title": "Youtube Transcript Loader",
      "description": "get youtube transcript",
      "commandType": "tool",
      "icon": "icon.png",
      "mode": "no-view",
      "parameters": {
        "type": "object",
        "properties": {
          "input_text": {
            "type": "string",
            "description": "The text the user entered to interact with the youtube, can include youtube url"
          },
          "selection_text": {
            "type": "string",
            "description": "The selected text to be processed"
          },
          "youtube_url": {
            "type": "string",
            "description": "The youtube url to be processed"
          },
          "with_timestamps": {
            "type": "boolean",
            "description": "Whether to include timestamps in the transcript",
            "default": true
          },
          "language": {
            "type": "string",
            "description": "The language code of the transcript, ISO 639-1",
            "default": "auto"
          },
          "current_browser_tab": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "The current browser tab url"
              },
              "title": {
                "type": "string",
                "description": "The current browser tab title"
              },
              "text": {
                "type": "string",
                "description": "The current browser tab text"
              }
            },
            "description": "The current browser tab",
            "required": [
              "url"
            ]
          }
        }
      },
      "preferences": [
        {
          "name": "with_timestamps",
          "type": "checkbox",
          "default": true,
          "title": "With timestamps",
          "description": "With timestamps"
        },
        {
          "name": "language",
          "type": "dropdown",
          "default": "auto",
          "title": "Default language",
          "description": "Default language",
          "dataProxy": "translate|languages"
        }
      ]
    },
    {
      "name": "chat_with_youtube",
      "title": "Chat With YouTube",
      "description": "Chat with YouTube",
      "mode": "no-view",
      "icon": "icon.png",
      "parameters": {
        "type": "object",
        "properties": {
          "input_text": {
            "type": "string",
            "description": "The text the user entered to interact with the youtube, can include youtube url"
          },
          "selection_text": {
            "type": "string",
            "description": "The selection text to be translated"
          },
          "question": {
            "type": "string",
            "description": "The question the user entered to interact with the youtube"
          },
          "youtube_url": {
            "type": "string",
            "description": "The youtube url to interact with"
          },
          "current_browser_tab": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "The current browser tab url"
              },
              "title": {
                "type": "string",
                "description": "The current browser tab title"
              },
              "text": {
                "type": "string",
                "description": "The current browser tab text"
              }
            },
            "description": "The current browser tab",
            "required": [
              "url"
            ]
          }
        },
        "required": [
          "question",
          "youtube_url"
        ]
      },
      "preferences": [
        {
          "name": "llm",
          "description": "The model used to generate responses",
          "type": "extension",
          "required": false,
          "default": "enconvo_ai",
          "title": "LLM Provider",
          "group": "AI Model",
          "defaultOptions": [
            {
              "commandName": "enconvo_ai",
              "modelName": "openai/gpt-4.1-mini",
              "temperature": 0
            }
          ]
        },
        {
          "name": "auto_audio_play",
          "description": "Automatically play result content",
          "type": "checkbox",
          "required": false,
          "title": "Automatically Play TTS Audio",
          "default": false
        },
        {
          "name": "responseLanguage",
          "description": "The language used to force LLM to respond",
          "type": "dropdown",
          "required": false,
          "title": "Response Language",
          "default": "auto",
          "dataProxy": "translate|languages"
        }
      ]
    },
    {
      "name": "summarize_youtube",
      "title": "Summarize YouTube",
      "description": "Summarize the content of the YouTube",
      "mode": "no-view",
      "icon": "icon.png",
      "aiPlugin": true,
      "targetCommand": "youtube|chat_with_youtube",
      "preferences": []
    },
    {
      "name": "youtube_video_downloader",
      "title": "Youtube Video Downloader",
      "description": "Download the Youtube video",
      "visibility": "hidden",
      "commandType": "deprecated",
      "mode": "no-view",
      "icon": "icon.png",
      "parameters": {
        "type": "object",
        "properties": {
          "input_text": {
            "type": "string",
            "description": "The text the user entered to interact with the youtube, can include youtube url"
          },
          "selection_text": {
            "type": "string",
            "description": "The selected text to be processed"
          },
          "current_browser_tab": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "The current browser tab url"
              }
            },
            "description": "The current browser tab"
          },
          "video_url": {
            "type": "string",
            "description": "The video url to download"
          },
          "favorite_resolution": {
            "type": "string",
            "description": "The favorite resolution to download, support best, 1080, 720, 480, 360, 240, 144, default is 720",
            "enum": [
              "best",
              "1080",
              "720",
              "480",
              "360",
              "240",
              "144"
            ]
          },
          "audio_only": {
            "type": "boolean",
            "description": "Whether to download only the audio, default is false"
          },
          "output_dir": {
            "type": "string",
            "description": "The directory to save the downloaded video, default is ~/Downloads"
          }
        },
        "required": [
          "video_url",
          "favorite_resolution"
        ]
      },
      "preferences": [
        {
          "name": "video_config",
          "type": "group",
          "title": "Video Config",
          "description": "The config for the video",
          "preferences": [
            {
              "name": "output_dir",
              "type": "textfield",
              "default": "~/Downloads",
              "title": "Output Directory",
              "description": "The directory to save the downloaded video"
            },
            {
              "name": "audio_only",
              "type": "checkbox",
              "default": false,
              "title": "Audio Only",
              "description": "Whether to download only the audio, default is false"
            },
            {
              "name": "favorite_resolution",
              "type": "dropdown",
              "title": "Favorite Resolution",
              "default": "best",
              "description": "The favorite resolution to download, default is best",
              "data": [
                {
                  "title": "Best",
                  "value": "best"
                },
                {
                  "title": "1080p",
                  "value": "1080"
                },
                {
                  "title": "720p",
                  "value": "720"
                },
                {
                  "title": "480p",
                  "value": "480"
                },
                {
                  "title": "360p",
                  "value": "360"
                },
                {
                  "title": "240p",
                  "value": "240"
                },
                {
                  "title": "144p",
                  "value": "144"
                }
              ]
            }
          ]
        },
        {
          "name": "use_cookies",
          "type": "group",
          "title": "Use Cookies",
          "description": "The config for the video",
          "preferences": [
            {
              "name": "use_cookies",
              "type": "checkbox",
              "default": false,
              "title": "Use Browser Cookies",
              "description": "Whether to use browser cookies for some private videos"
            },
            {
              "name": "browser_type",
              "type": "dropdown",
              "title": "Browser",
              "default": "chrome",
              "description": "Select the browser to use for cookies",
              "data": [
                {
                  "title": "Brave",
                  "value": "brave"
                },
                {
                  "title": "Chrome",
                  "value": "chrome"
                },
                {
                  "title": "Chromium",
                  "value": "chromium"
                },
                {
                  "title": "Edge",
                  "value": "edge"
                },
                {
                  "title": "Firefox",
                  "value": "firefox"
                },
                {
                  "title": "Opera",
                  "value": "opera"
                },
                {
                  "title": "Safari",
                  "value": "safari"
                },
                {
                  "title": "Vivaldi",
                  "value": "vivaldi"
                },
                {
                  "title": "Whale",
                  "value": "whale"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "link:/Users/ysnows/Documents/Project/enconvo.nodejs/enconvo_api",
    "axios": "^1.10.0",
    "sanitize-filename": "^1.6.3",
    "unused-filename": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.19.33",
    "eslint": "^8.57.0",
    "prettier": "^2.8.8",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  }
}