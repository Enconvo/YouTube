{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "youtube",
  "version": "0.0.1",
  "description": "YouTube",
  "title": "Youtube",
  "icon": "icon.png",
  "author": "Enconvo",
  "license": "MIT",
  "type": "module",
  "minAppVersion": "1.8.8",
  "categories": [
    "Bot"
  ],
  "commands": [
    {
      "name": "youtube_transcript_loader",
      "title": "Youtube transcript loader",
      "description": "get youtube transcript",
      "icon": "icon.png",
      "mode": "no-view",
      "parameters": {
        "input_text": {
          "type": "string",
          "description": "The text to be processed"
        },
        "selection_text": {
          "type": "string",
          "description": "The selected text to be processed"
        }
      },
      "preferences": [
        {
          "name": "with_timestamps",
          "type": "checkbox",
          "default": true,
          "title": "With timestamps",
          "description": "With timestamps"
        },
        {
          "name": "default_language",
          "type": "dropdown",
          "default": "en",
          "title": "Default language",
          "description": "Default language",
          "dataProxy": "youtube|languages"
        }
      ]
    },
    {
      "name": "languages",
      "title": "Languages",
      "description": "get language list",
      "icon": "straico.png",
      "showInCommandList": false,
      "mode": "no-view",
      "preferences": []
    }
  ],
  "dependencies": {
    "@enconvo/api": "^0.1.156",
    "iso-639-1": "^3.1.3",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@types/node": "^18.19.33",
    "eslint": "^8.57.0",
    "prettier": "^2.8.8",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  }
}
